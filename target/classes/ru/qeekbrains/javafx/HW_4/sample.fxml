<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.qeekbrains.javafx.HW_4.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox>
        <TextArea fx:id="chatHistory"  prefHeight="200.0" prefWidth="200.0" />
        <HBox>
            <TextField fx:id="chat"  prefHeight="20.0" prefWidth="200.0" />
            <Button fx:id="input" text="Отправить" onAction="#onHelloButtonClick"/>
        </HBox>
    </VBox>

</VBox>
